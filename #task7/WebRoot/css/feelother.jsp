* {
	margin: 0px;
	padding: 0px;
}

#qq {
	float:left;
	width: 840px; /*宽*/
	height: 30px; /*高*/
	background: #fff; /*背景颜色*/
	margin: 0px auto 10px;
	border-radius: 5px; /*Html5 圆角*/
}

#qq p {
	font-size: 12px;
	color: #666;
	font-family: "微软雅黑";
	line-height: 45px;
	text-indent: 20px;
}

/*msgCon begin*/
.msgCon {
	float:left;
	width: 840px;
	height: 500px;
	margin: 0px auto;
}

.msgCon .msgBox {
	background: #fff;
	padding: 10px;
	margin-top: 20px;
}

.msgCon .msgBox dl {
	height: 60px;
	border-bottom: 1px dotted #ddd;
}

.msgCon .msgBox dl dt {
	width: 50px;
	height: 50px;
	float: left;
}

.msgCon .msgBox dl dt img {
	border-radius: 25px;
}

.msgCon .msgBox dl dd {
	width: 720px;
	height: 50px;
	line-height: 50px;
	float: right;
	font-size: 16px;
	font-family: "微软雅黑";
}

.msgCon .msgBox .msgTxt {
	font-size: 12px;
	color: #666;
	line-height: 25px;
}

.comm_content {
	font-family: Verdana;
	height: auto;
	font-size: 12px;
	text-align: left;
	padding: 5px 15px 15px 15px;
}

#pl_page {
	float: left;
	position: relative;
	left: 30%;
	clear: both;
	padding: 15px 0 10px 0;
	text-align: center;
	font-family: Tahoma;
}

#pl_page span,#pl_page a,#pl_page strong {
	font-family: Tahoma;
}

.pagelistbox {
	/* position: relative; */
	float: left; 
   left: -50%; 
}

.pagelistbox a,.pagelistbox span,.pagelistbox strong {
	color: #444;
	box-shadow: rgba(0, 0, 0, 0.08) 0px 0px 4px;
	padding: 7px 10px;
	border: 1px solid #ccc;
	border-radius: 3px;
	background: #fff;
	text-decoration: none;
	margin: 0 2px;
	_display: inline-block;
}

.pagelistbox a:hover,.pagelistbox strong {
	color: #fff;
	background: #5CAAE6;
	border-color: #4798D6;
	text-decoration: none;
}

#pl_page .listinfo {
	font-size: 16px;
	font-weight: bold;
	color: #666;
	text-shadow: 1px 1px 1px rgba(255, 255, 255, 1);
}
